{
  "name": "koa-oas-router",
  "version": "0.0.0-development",
  "description": "This module extends the koa-router with some features usable with oas.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "ava",
    "build": "rimraf ./dist && tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matzehecht/koa-oas-router.git"
  },
  "keywords": [
    "koa",
    "oas",
    "koa-router"
  ],
  "author": "Matthias Hecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matzehecht/koa-oas-router/issues"
  },
  "homepage": "https://github.com/matzehecht/koa-oas-router#readme",
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@types/node": "^16.11.9",
    "ava": "^3.15.0",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    },
    "files": [
      "src/tests/**/*"
    ]
  },
  "dependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/koa-router": "^7.4.4",
    "koa-router": "^10.1.1",
    "oas-validator": "^5.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

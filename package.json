{
  "name": "koa-oas-router",
  "version": "0.0.0-development",
  "description": "This module extends the koa-router with some features usable with oas.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "ava",
    "prebuild": "rimraf ./dist",
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matzehecht/koa-oas-router.git"
  },
  "keywords": [
    "koa",
    "oas",
    "koa-router"
  ],
  "author": "Matthias Hecht",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matzehecht/koa-oas-router/issues"
  },
  "homepage": "https://github.com/matzehecht/koa-oas-router#readme",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^22.10.2",
    "ava": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/cjs/"
      },
      "compile": false
    },
    "files": [
      "src/tests/**/*"
    ]
  },
  "dependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/koa-router": "^7.4.8",
    "koa-router": "^13.0.1",
    "oas-validator": "^5.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

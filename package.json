    "ava": "^3.11.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typedoc-plugin-markdown": "^2.4.1",
